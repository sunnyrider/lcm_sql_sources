SELECT * FROM BSI_DOCUMENT bd WHERE dbms_lob.substr(BD.X_LOCATION_LOB, 1000, 1) = '1239323.pdf'
;

SELECT * FROM BSI_DOCUMENT bd WHERE dbms_lob.substr(BD.X_LOCATION_LOB, 1000, 1) LIKE '%1007837331_20171213%'
;

SELECT * FROM BSI_DOCUMENT bdoc
INNER JOIN BSI_COMMUNICATION cmc ON CMC.COMMUNICATION_NR = BDOC.ITEM_KEY0_NR
WHERE CMC.COMMUNICATION_NR = 1011547999
;