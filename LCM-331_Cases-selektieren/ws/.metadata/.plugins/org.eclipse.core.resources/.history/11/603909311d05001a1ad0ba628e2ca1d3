SELECT
	CASE WHEN CMC.TEXT_LOB IS NOT NULL THEN 
		REPLACE(dbms_lob.substr(CMC.TEXT_LOB, 4000, 1), chr(13), ' ') 
	ELSE 
		''
	END LCM_Communcation_Text,
	CMC.X_COMMUNICATION_EXT_KEY,
	CMC.CHANNEL_UID,
	CMC.STATUS_UID,
	CMC.ORIGIN_UID
FROM BSI_COMMUNICATION cmc 
--WHERE CMC.X_COMMUNICATION_EXT_KEY = '4309FA1C78D70D21E053C020A60AF0EF'
;